<html>

<head>
  <title>Ecotips - Recettes</title>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display+SC&display=swap" rel="stylesheet" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
  <h1><a href="/categorie">ECOTIPS</a></h1>
  <div class="link"><a href="/fiche/add">Ajouter une recette</a></div>
  <form class="filter" action="/fiche/filter" method="POST">
    <input type="text" placeholder="Search" aria-label="Search" name="title" />
    <button type="submit">
      Search
    </button>
    <button type="submit">
      Delete Filter
    </button>
  </form>
  <ul class="box">
    <% for (let i = 0 ; i < fiches.length ; i++) { %>
    <li class="title">
      <%= fiches[i].title %>
    </li>
    <div class="inside">
      <li class="ingredients">
        <%= fiches[i].ingredients %>
      </li>
      <li class="process">
        <%= fiches[i].process %>
      </li>
    </div>
    <li class="action">
      <div class="modifier">
        <a href="/fiche/update/<%= fiches[i].idfiche %>">Modifier</a>
      </div>
      <div class="delete">
        <a href="/fiche/delete/<%= fiches[i].idfiche %>">Effacer</a>
      </div>
    </li>
    <% } %>
  </ul>
  <div class="back"><a href="/categorie">Retour aux cat√©gories</a></div>
</body>

</html>

